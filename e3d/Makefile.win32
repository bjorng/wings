.SUFFIXES: .erl .jam .beam .yrl .xrl .bin .mib .hrl .sgml .html .ps .3 .1 \
	.fig .dvi .tex .class .java .pdf .psframe .pscrop .removed

ESRC=.
EBIN=..\ebin
ERLC=erlc


TARGET_FILES= \
	$(EBIN)\e3d_image.beam \
	$(EBIN)\e3d_mesh.beam \
	$(EBIN)\e3d_obj.beam \
	$(EBIN)\e3d_rib.beam \
	$(EBIN)\e3d_tds.beam \
	$(EBIN)\e3d_mat.beam \
	$(EBIN)\e3d_vec.beam \
	$(EBIN)\e3d__meshclean.beam \
	$(EBIN)\e3d__bmp.beam \
	$(EBIN)\e3d__tga.beam \
	$(EBIN)\e3d__tif.beam

REMOVE_FILES=$(TARGET_FILES:.beam=.removed)

# ----------------------------------------------------
# FLAGS
# ----------------------------------------------------
ERL_FLAGS = 
ERL_COMPILE_FLAGS = -W $(TYPE_FLAGS)

# ----------------------------------------------------
# Targets
# ----------------------------------------------------

common: $(TARGET_FILES) 

clean: $(REMOVE_FILES) 

{$(EBIN)}.beam{$(EBIN)}.removed:
	-del $(*R).beam

{$(ESRC)}.erl{$(EBIN)}.beam:
	$(ERLC) -bbeam $(ERL_FLAGS) $(ERL_COMPILE_FLAGS) -o$(EBIN) $(*B).erl
